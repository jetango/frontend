{
  "clean": {
    "build": ["build"],
    "release": ["../modules/base"]
  },

  "html": {
    "src": "src/**/*.html",
    "build": "build"
  },

  "css": {
    "src": "src/css/**/*.css",
    "build": "build/css",
    "release": "../modules/base/css"
  },

  "js": {
    "src": "src/js/**/*.js",
    "build": "build/js",
    "release": "../modules/base/js"
  },

  "img": {
    "src": "src/img/**/*.*",
    "build": "build/img",
    "release": "../modules/base/img"
  },

  "libs": [
    {
      "src": "src/fonts/**/*",
      "build": "build/fonts",
      "release": "../modules/base/fonts"
    },
    {
      "src": "src/library/**/*",
      "build": "build/library",
      "release": "../modules/base/library"
    }
  ],

  "server": {
    "host": "localhost",
    "port": "9000"
  }
}